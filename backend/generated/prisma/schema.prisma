generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  role        UserRole @default(USER)
  totpSecret  String?
  totpEnabled Boolean  @default(false)
  orders      Order[]
}

model Product {
  id              Int         @id @default(autoincrement())
  name            String
  slug            String      @unique // Np. "iphone-15-pro-max"
  price           Int
  description     String
  discount        Int? // Rabat procentowy, np. 10 dla 10%
  stock           Int         @default(0)
  isAvailable     Boolean     @default(true)
  discountedPrice Int? // Cena po rabacie, obliczana na podstawie price i discount
  orderItems      OrderItem[]
  promotion       Promotion[]
}

model Order {
  id            Int         @id @default(autoincrement())
  userId        Int
  totalAmount   Int
  stripeSession String
  status        OrderStatus @default(PENDING)
  user          User        @relation(fields: [userId], references: [id])
  items         OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  price     Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model Promotion {
  id        Int      @id @default(autoincrement())
  productId Int
  discount  Int
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
}

enum OrderStatus {
  PENDING
  PAID
  CANCELED
}

enum UserRole {
  USER
  ADMIN
}
